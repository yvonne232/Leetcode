Time complexity: O(n)
Space complexity: O(n)

class Solution:
    def mostPoints(self, questions: List[List[int]]) -> int:
        # Because dp[i] depends on future states (dp[i+1] and dp[i + brainpower + 1]), so those must already be computed. So moving backwards
        n = len(questions)
        dp = [0] * (n+1)

        for i in range(n-1, -1, -1):
            points, brain = questions[i]
            next_i = i + brain + 1
            take = points + (dp[next_i] if next_i <= n else 0)
            skip = dp[i+1]
            dp[i] = max(take, skip)

        return dp[0]
